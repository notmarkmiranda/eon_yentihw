<div class="container">
  <div class="jumbotron index-jumbotron">
  <h1 class="display-3">Words of Wisdom for Whitney</h1>
  <hr class="my-4">
  <p>Share a memory we have together, or some advice for the future</p>
  <p class="lead">
    <%= link_to 'Add a New Memory', new_memory_path, class: 'btn btn-primary btn-lg' %>
  </p>
</div>

  <section class="no-touch">
    <div class="wrap">

      <% @memories.each do |memory| %>
        <div class="box">
          <%= link_to memory do %>
            <div class="boxInner">
                <%= image_tag memory.image.url %>
                <div class="titleBox"><%= "#{memory.title} by #{memory.author}" %></div>
            </div>
          <% end%>
        </div>
      <% end %>

  </div>
</section>
</div>

